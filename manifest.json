{
  "manifest_version": 3,
  "name": "CourseMate",
  "short_name": "CourseMate",
  "version": "1.0.0",
  "description": "Displays RateMyProfessors ratings and CougarGrades data on University of Houston course pages",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.uh.edu/*",
    "https://www.ratemyprofessors.com/*",
    "https://cougargrades.io/*",
    "https://unpkg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.uh.edu/*"
      ],
      "js": ["contentScript.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
